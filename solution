#include<string>
#include<iostream>
using namespace std;
int main()
{
    int i, n;
    cin>>n;
    int a[n];
    for(i=0;i<n;i++)
    {
        cin>>a[i];
    }
    string s;
    cin>>s;
    int flag=0;
    int maxi = 0;  // since if max element of an array can be swap only then whole array can be sort so carry max element of array and compare them.
    for(i=0;i<(n-1);i++)
    {
        maxi = max(maxi,a[i]);
        if(maxi > i+1 && s[i]=='0')
        {
            flag=1;
            cout<<"NO";
            break;
        }
    }
    if(flag==0)
    {
        cout<<"YES";
    }
    return 0;
}
